<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorPrimary"
    tools:context="com.example.vasilis.TheGadgetFlow.ResetPasswordActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:id="@+id/ll_toolbar">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>




    <ImageView
        android:layout_width="@dimen/logo_width"
        android:layout_height="@dimen/logo_height"
        android:layout_marginTop="@dimen/margin_top_logo"
        android:src="@drawable/logo"
        android:id="@+id/logo_rs"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true" />

    <EditText
        style="@style/Login_editTexts"
        android:hint="@string/reset_password_email"
        android:layout_below="@+id/logo_rs"
        android:id="@+id/email_reset"
        android:layout_marginTop="@dimen/margin_top_edit_text_from_logo"/>

    <Button
        style="@style/Login_Buttons"
        android:text="RESET MY PASSWORD"
        android:id="@+id/button_reset"
        android:layout_below="@+id/email_reset"
        android:layout_marginRight="@dimen/margin_edit_text_left_right"
        android:layout_marginEnd="@dimen/margin_edit_text_left_right"
        android:layout_marginStart="@dimen/margin_edit_text_left_right"
        android:layout_marginLeft="@dimen/margin_edit_text_left_right"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/should"
        android:text="@string/reset_password_mail"
        android:textColor="#fff"
        android:textSize="@dimen/should_text_size"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@+id/button_reset"
        android:layout_margin="@dimen/should_margin"/>

</RelativeLayout>
