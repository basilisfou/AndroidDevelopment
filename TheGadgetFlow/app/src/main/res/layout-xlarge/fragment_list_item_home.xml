<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlRowHeaderMenu"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/divider_color">


    <!-- Date -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        android:id="@+id/container_date"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#353535"
            android:textSize="12sp"
            android:id="@+id/tv_date"/>

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/listItem_home_swipe_refresh_layout"
        android:layout_below="@+id/container_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- the list with the items -->
        <android.support.v7.widget.RecyclerView
            android:id="@+id/listItem_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rl_row_progress_bar_home"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <!-- anchor for the list view -->
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/anchor_home"
        android:layout_marginTop="10dp"
        android:src="@drawable/anchor"
        android:background="@android:color/transparent"
        android:layout_below="@+id/container_date"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>


</RelativeLayout>