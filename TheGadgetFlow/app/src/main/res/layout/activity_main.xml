<RelativeLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- action bar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_toolbar">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_toolbar"
        android:orientation="vertical"
        android:layout_above="@+id/ll_toolbar_bottom">

        <LinearLayout
            android:id="@+id/ln_search_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ColorPrimary"
            android:visibility="gone"
            android:orientation="vertical">

            <View android:layout_height="0.1dp"
                android:layout_width="match_parent"
                android:background="#000"/>

            <EditText
                android:id="@+id/ed_search_home"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textCursorDrawable="@drawable/cursor_search"
                android:background="@color/ColorSecondaryDark"
                android:ellipsize="start"
                android:textSize="14sp"
                android:hint="Search for Products"
                android:imeOptions="actionSearch"
                android:inputType="textNoSuggestions"
                android:singleLine="true" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/spinner_container"
            android:visibility="gone"
            android:background="#fff">

            <Spinner
                android:id="@+id/spinner"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"
                android:popupBackground="@null"
                android:padding="0dp"
                android:layout_margin="15dp"
                android:dropDownVerticalOffset="@dimen/vertical_offset"/>

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/frame_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" />
        </LinearLayout>
        <!-- buttom navigation bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:id="@+id/ll_toolbar_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3d707070"
                android:id="@+id/seperator"
                android:layout_alignParentTop="true"
                android:orientation="vertical"/>

            <include
                android:layout_below="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/toolbar_bottom"
                layout="@layout/bottom_toolbar" />

        </RelativeLayout>

</RelativeLayout>
                

